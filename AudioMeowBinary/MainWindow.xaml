<Window x:Class="AudioMeowBinary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioMeowBinary"
        mc:Ignorable="d"
        Title="Audio Meow Binary" Height="420" Width="420" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Text to Convert" Margin="-10,21,10,50" HorizontalContentAlignment="Center"/>
        <TextBox Name="EnglishText" Margin="10,51,0,60" Grid.RowSpan="2"/>
        <Button Grid.Row="1" Content="Convert" Margin="46,71,46,71" Grid.RowSpan="2" Click="ConvertText"/>
        <Button Grid.Row="2" Content="Play" Margin="30,81,215,55" Grid.RowSpan="2" Click="PlayAudio"/>
        <Button Grid.Row="3" Content="View Audio File" Margin="210,18,10,17" Click="ViewAudioFile"/>
    </Grid>
</Window>
